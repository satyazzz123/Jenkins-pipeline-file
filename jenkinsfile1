pipeline{
    agent any
    environment{
        RELEASE='21.01'
    }
    stages{
        stage('checking for dependency'){
            steps{
            sh '''

                git version
                
            '''


            }
           
        }
        stage('installing required dependencies'){
                steps{
                    sh '''
                    su -
                    snap install go --classic
                    go version

                    '''
                }
        }
        stage('pulling application from git'){
            steps{
                sh '''
                    mkdir go-application 
                    cd go-application
                    git clone https://github.com/satyazzz123/Go-mail

                '''
            }
        }

        
    }
}